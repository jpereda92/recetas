extends ../head 

block content
    main
        .cuadro.ancho-largo 
            .header-card
                h1 Listado de #{title} 
            section.body
                div
                    a.btn-action(href="/category/create"): i.glyphicon.glyphicon-plus
                table.table
                    thead
                        tr
                            th No.
                            th Categoria
                            th Descripci√≥n
                            th.text-center Herramientas 
                    tbody
                        each category, i in listacategoria
                            tr
                                td= i+1
                                td= category.nombre
                                td= category.descripcion
                                td.text-center  
                                    a.btn-action(href="/category/edit/" + category.id): i.glyphicon.glyphicon-pencil
                                    a.btn-action(onclick="confirmarcategoria("+category.id+")"): i.glyphicon.glyphicon-trash
