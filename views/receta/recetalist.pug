extends ../head 

block content
    main
        .cuadro.ancho-largo 
            .header-card
                h1 Listado de #{title} 
            section.body
                div
                    a.btn-action(href="/receta/create"): i.glyphicon.glyphicon-plus
                table.table
                    thead
                        tr
                            th No.
                            th Receta
                            th Categoria
                            th.text-center Herramientas 
                    tbody
                        each receta, i in listarecetas
                            tr
                                td= i+1
                                td= receta.nombre
                                td= receta.categorium.nombre
                                td.text-center  
                                    a.btn-action(href="/receta/edit/" + receta.id): i.glyphicon.glyphicon-pencil
                                    a.btn-action(onclick="confirmarreceta("+receta.id+")"): i.glyphicon.glyphicon-trash
block scriptes
   script(src='/js/script.js')