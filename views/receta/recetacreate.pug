extends ../head 
block content
  .cuadro.ancho-largo
    .header-card
      h1= title
    section.body
      form(action="", method="post"  enctype="multipart/form-data") 
       
        input#nombre.largo(type=text, name="nombre" placeholder="Nombre la categoria")
        textarea#decripcion.largo(name="descripcion" placeholder="Descripción la categoria" cols="30" rows="10")
        
        #imagenbox.input-group
          label(for="image")
            i.glyphicon.glyphicon-plus.addimagen
            img#imagenes(name="filename"  type="text" width=150 height=150)    
          input#image(type="file" name="image"  data-url="/img" accept="image/*")
        .col-lg-4
          input#time.largo(type="number", name="tiempo" placeholder="Tiempo")
        .col-lg-4
          input#time.largo(type="number", name="calorias" placeholder="Calorias")
        .col-lg-4
          select.largo(name="dificultad")
            each level in ["Fácil", "Normal", "Dificil"]
              option(value=level)= level
        select.largo(name="id_categoria")
          each category in listacategoria
            option(value=category.id)= category.nombre
        h3 Ingredientes
        .col-lg-4
          input.largo(type=text, name="ingrediente" placeholder="Ingrediente")
        .col-lg-2
          select.largo(name="medida")
            each medida in ["Al gusto", "Gramo", "Kilogramo", "Litro", "Pizca", "Pieza", "Taza", "Cucharada", "Cucharadita"]
              option(value=medida)= medida
        .col-lg-2
          input.largo(type="number", name="cantidades" placeholder="Cantidad")
        .col-lg-4
          button.boton-adicionar( type="button")
            i.glyphicon.glyphicon-trash
          button.boton-adicionar( type="button")
            i.glyphicon.glyphicon-plus
